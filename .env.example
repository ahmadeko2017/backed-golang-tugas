# Example environment variables for local development / deployment
# Replace values with your Supabase/Postgres connection string

# Postgres connection URL (Supabase). Example:
# postgres://username:password@db.host.supabase.co:5432/postgres?sslmode=require
DATABASE_URL="postgres://user:pass@host:5432/dbname?sslmode=require"

# Seeder controls
SEED_DATA=false   # set to true to insert sample data if tables are empty
SEED_EXIT=false   # set to true to exit after seeding (useful in CI jobs)

# Database Connection Pool
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=3600

# App settings
GIN_MODE=release
